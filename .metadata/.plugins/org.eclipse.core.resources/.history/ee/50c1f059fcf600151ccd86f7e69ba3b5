#include <iostream>
#include<stdio.h>

using namespace std;


int main() {

	float x0;

	cout << "Enter a single integer: ";
	cin >> x0;

	fib(x0);

	return 0;

}


float fib(float n){
	if(n<=1)
		return n;
	return fib(n-1) + fib(n-2);

}



