#include <iostream>
#include<stdio.h>

using namespace std;

float fib(float n){
	if(n<=1)
		return n;
	return fib(n-1) + fib(n-2);


}

int main() {

	float x0,result;

	cout << "Enter a single integer: ";
	cin >> x0;

	result = fib(x0);
	cout >> "The fibonacci number is: ";
	cout >> result << endl;

	return 0;

}



